<?xml version="1.0" encoding="utf-8"?>
<!-- listview_section_row.xml is used by ListSectionActivity.java.
     Shows Line of List of transect sections -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_background"
              android:orientation="horizontal"
              android:padding="5dp">

    <!-- Name of transect section -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:id="@+id/txtTitle"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="4dp"
        android:textStyle="bold"/>

    <!-- Remark of transect section -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:id="@+id/txtRemark"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:padding="4dp"/>

    <!-- Date of first count -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:textColor="#FFFFFF"
        android:gravity="right"
        android:padding="4dp"
        android:id="@+id/txtDate"/>

    <!-- Delete botton -->
    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:id="@+id/deleteSection"
        android:gravity="center_vertical|right"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_gravity="bottom|right|top"
        android:layout_margin="1dp"/>

</LinearLayout>
