<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:layout_marginLeft="2dp"
             android:layout_marginRight="2dp"
             android:layout_marginTop="5dp"
             android:background="@drawable/rounded_corner"
             android:baselineAligned="false"
             android:orientation="vertical"
             android:paddingTop="1dp"
             android:paddingBottom="1dp"
             android:paddingEnd="5dp"
             android:paddingStart="5dp">

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/countName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="6"
            android:hint="@string/countNameHint"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#bfffff"
            android:textSize="17sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/countCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1.8"
            android:hint="@string/countCodeHint"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#bfffff"
            android:textSize="17sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>

        <ImageView
            android:id="@+id/pSpecies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/p00000"/>
        
    </TableRow>

</TableLayout>
